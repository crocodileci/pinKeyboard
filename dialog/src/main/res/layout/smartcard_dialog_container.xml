        <EditText
            android:id="@+id/pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pincode_hint"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:inputType="numberPassword" android:layout_marginStart="20dp" />

        <EditText
            android:id="@+id/pincode_new1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pincode_new1_hint"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:inputType="numberPassword" android:layout_marginStart="20dp" />

        <EditText
            android:id="@+id/pincode_new2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pincode_new2_hint"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:inputType="numberPassword" android:layout_marginStart="20dp" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp">

            <include layout="@layout/numeric_pad_layout" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>
